\begin_layout Subsection
Novel Optimal Design
\end_layout

\begin_layout Standard
For each round 
\begin_inset Formula $t$
\end_inset

,
 let 
\begin_inset Formula $\tilde{a}_{t}=\argmax{k\in[K]}x_{k,t}^{\top}\tilde{\beta}_{t-1}$
\end_inset

 denote the arm drawn by the Thompson Sampling algorithm where 
\begin_inset Formula $\tilde{\beta}_{t-1}\sim N(\widehat{\beta}_{t-1},V_{t-1}^{-1})$
\end_inset

 and 
\begin_inset Formula $\widehat{\beta}_{t-1}$
\end_inset

 is the proposed estimator and 
\begin_inset Formula $V_{t-1}$
\end_inset

 is the Gram matrix.
 Let 
\begin_inset Formula $\Xb_{t}=[X_{1,t},\cdots,X_{K,t}]\in\RR^{d\times K}$
\end_inset

 denote a concatenated context matrix and 
\begin_inset Formula $\rho_{t}:=\rank(\Xb_{t})$
\end_inset

 denote its rank.
 It is obvious that 
\begin_inset Formula $\rho_{t}\le\min\{d,K\}$
\end_inset

.
 Applying reduced QR decomposition,
 there exists a matrix with orthonormal column vectors 
\begin_inset Formula $\Qb_{t}\in\RR^{d\times\rho_{t}}$
\end_inset

 and vectors 
\begin_inset Formula $r_{1,t},\ldots,r_{K,t}\in\RR^{\rho_{t}}$
\end_inset


\begin_inset Formula 
\[
\begin{bmatrix}x_{1,t} & \cdots & x_{K,t}\end{bmatrix}=\Qb_{t}\begin{bmatrix}r_{1,t} & \cdots & r_{K,t}\end{bmatrix}.
\]

\end_inset

Let 
\begin_inset Formula $p_{t}$
\end_inset

 denote the G-optimal policy over 
\begin_inset Formula $\{r_{1,t},\ldots,r_{K,t}\}$
\end_inset

.
 By Kiefer-wolfwiez theorem,
 G-optimal design is equivalent with D-optimal design,
 which is efficiently computable.
 By definition of the G-optimal policy,
 we have 
\begin_inset Formula $\max_{k^{\prime}\in[K]}r_{k^{\prime},t}^{\top}(\sum_{k=1}^{K}p_{t}(k)r_{k,t}r_{k,t}^{\top})^{-1}r_{k^{\prime},t}=\rho_{t}$
\end_inset

.
 Thus,
 for all 
\begin_inset Formula $k^{\prime}\in[K]$
\end_inset


\begin_inset Formula 
\[
(\rho_{t}\sum_{k=1}^{K}p_{t}(k)r_{k,t}r_{k,t}^{\top})^{-1/2}r_{k^{\prime},t}r_{k^{\prime},r}^{\top}(\rho_{t}\sum_{k=1}^{K}p_{t}(k)r_{k,t}r_{k,t}^{\top})^{-1/2}\preceq I_{\rho_{t}},
\]

\end_inset

which implies 
\begin_inset Formula $r_{k^{\prime},t}r_{k^{\prime},t}\preceq\rho_{t}\sum_{k=1}^{K}p_{t}(k)r_{k,t}r_{k,t}^{\top}$
\end_inset

.
 Thus,
 for each 
\begin_inset Formula $k^{\prime}\in[K]$
\end_inset

,
 
\begin_inset Formula 
\[
|x_{k^{\prime},t}^{\top}y|^{2}=|r_{k^{\prime},t}\Qb_{t}^{\top}y|^{2}\le\rho_{t}\sum_{k=1}^{K}p_{t}(k)\big(r_{k,t}\Qb_{t}^{\top}y\big)^{2}=\sum_{k=1}^{K}p_{t}(k)(\sqrt{\rho_{t}}x_{k,t}^{\top}y)^{2}.
\]

\end_inset

Thus,
 for 
\begin_inset Formula $k^{\prime}\in[K]$
\end_inset

,
 we obtain 
\begin_inset Formula $x_{k^{\prime},t}x_{k^{\prime},t}^{\top}\preceq\rho_{t}\sum_{k=1}^{K}p_{t}(k)x_{k,t}x_{k,t}^{\top}$
\end_inset

.
 
\end_layout

\begin_layout Standard
Based on this G-optimal design,
 we construct a novel exploration scheme that is compatible with both Thompson Sampling and Doubly Robust estimator.
 Define the distribution over 
\begin_inset Formula $[K]$
\end_inset

 as 
\begin_inset Formula 
\[
\bar{\pi}_{t}(k)=\frac{p_{t}(k)+\II(k=\tilde{a}_{t})}{2}.
\]

\end_inset

Let 
\begin_inset Formula $\{\bar{a}_{t}^{(n)}:n\ge1\}$
\end_inset

 denote the IID samples from the distribution 
\begin_inset Formula $\bar{\pi}_{t}$
\end_inset

 and let 
\begin_inset Formula $m_{t}:=\{n\le\lceil\log\frac{\sqrt{t}}{d}/\log2\rceil:\bar{a}_{t}^{(n)}=\tilde{a}_{t}\}$
\end_inset

 denote the stopping time when the action from 
\begin_inset Formula $\bar{\pi}_{t}$
\end_inset

 matches 
\begin_inset Formula $\tilde{a}_{t}$
\end_inset

 with in 
\begin_inset Formula $\lceil\log\frac{\sqrt{t}}{d}/\log2\rceil$
\end_inset

 number of trials.
 We select the action 
\begin_inset Formula $a_{t}=\bar{a}_{t}^{(m_{t})}$
\end_inset

.
 With probability at least 
\begin_inset Formula $1-d/\sqrt{t}$
\end_inset

,
 the algorithm selects 
\begin_inset Formula $\tilde{a}_{t}$
\end_inset

 while it selects other actions with probability at most 
\begin_inset Formula $d/\sqrt{t}$
\end_inset

.
 Let 
\begin_inset Formula $\Acal_{m}$
\end_inset

 denote the sigma-algebra generated by 
\begin_inset Formula $\{\bar{a}_{t}^{(n)}:n\in[m]\}$
\end_inset

.
 Given the sigma-algebra 
\begin_inset Formula $\Acal_{m_{t}^{-}}$
\end_inset

 generated by the events 
\begin_inset Formula $\cap_{m=1}^{\lceil\log\frac{\sqrt{t}}{d}/\log2\rceil}\{A\cap\{m_{t}=m\}:A\in\Acal_{m-1}\}$
\end_inset

,
 which is the information right before the matching event,
 the distribution of 
\begin_inset Formula $\bar{a}_{t}^{(m_{t})}$
\end_inset

 is 
\begin_inset Formula $\bar{\pi}_{t}$
\end_inset

 which is the mixture of G-optimal design and the selected arm 
\begin_inset Formula $\tilde{a}_{t}$
\end_inset

.
 
\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $v_{1,t},\ldots,v_{\rho_{t},t}$
\end_inset

 denote the orthogonal vectors such that 
\begin_inset Formula $\frac{1}{2}\sum_{k=1}^{K}\rho_{t}p_{t}(k)x_{k,t}x_{k,t}^{\top}+\frac{1}{2}x_{\tilde{a}_{t},t}x_{\tilde{a}_{t},t}^{\top}=\sum_{i=1}^{\rho_{t}}v_{i,t}v_{i,t}^{\top}$
\end_inset

.
 Let 
\begin_inset Formula $i_{t}\sim\text{unif}([\rho_{t}])$
\end_inset

 and
\begin_inset Formula 
\[
\theta_{t}^{R}:=\big(\sum_{s=1}^{t}\frac{\II(i_{s}=i)}{1/\rho_{s}}v_{i,s}v_{i,s}^{\top}+\lambda I_{d}\big)^{-1}\sum_{s=1}^{t}\big(\II(a_{s}\neq\tilde{a}_{s})\sqrt{\rho_{s}}Y_{a_{s},s}x_{a_{s},s}+\II(a_{s}=\tilde{a_{s}})Y_{\tilde{a}_{s},s}x_{\tilde{a}_{s},s}\big)
\]

\end_inset

denote the weighted ridge estimator.
 We define the core augmented DR pseudo-reward as
\begin_inset Formula 
\[
\check{Y}_{i,t}(i_{t},a_{t})=(1-\frac{\II(i_{t}=i)}{1/\rho_{t}})v_{i,t}^{\top}\beta_{t}^{R}+\II(a_{t}\neq\tilde{a}_{t})\sqrt{\rho_{t}}Y_{a_{t}}+\II(a_{t}=\tilde{a_{t}})Y_{\tilde{a}_{t}}.
\]

\end_inset

Define the augmented DR estimator
\begin_inset Formula 
\[
\widehat{\theta}_{t}:=V_{t}^{-1}\sum_{s=1}^{t}\Big((1-\frac{\II(i_{s}=i)}{1/\rho_{s}})v_{i,s}v_{i,s}^{\top}\beta_{t}^{R}+\II(a_{t}\neq\tilde{a}_{t})\rho_{t}Y_{a_{t}}x_{a_{t}}+\II(a_{t}=\tilde{a_{t}})Y_{\tilde{a}_{t}}x_{\tilde{a}_{t}}\Big),
\]

\end_inset

where the Gram matrix,
\begin_inset Formula 
\[
V_{t}:=\sum_{s=1}^{t}\big(\frac{1}{2}\sum_{k=1}^{K}\rho_{s}p_{s}(k)x_{k,s}x_{k,s}^{\top}+\frac{1}{2}x_{\tilde{a}_{s},s}x_{\tilde{a}_{s},s}^{\top}\big)+\lambda_{t}I_{d}.
\]

\end_inset


\end_layout

\begin_layout Theorem
\begin_inset CommandInset label
LatexCommand label
name "thm:self"

\end_inset

(Self-normalized bound for the ADR estimator) Suppose 
\begin_inset Formula $t$
\end_inset

 satisfies,
 
\begin_inset Formula $t\ge d\log??$
\end_inset

.
 With probability at least 
\begin_inset Formula $1-\delta$
\end_inset

,
 
\begin_inset Formula 
